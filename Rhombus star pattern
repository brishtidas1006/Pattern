#include <bits/stdc++.h>
using namespace std;
#define endl "\n"
#define ll long long
int main() {
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);
    int n;
    cin >> n;
    for (int i = 0; i < n; i++){
        for(int j = 1; j <= n + i; j++){
            if(j <= i ) cout << " ";
            else cout << "*";
        }
        cout << endl;
    }


    return 0;
}
